<h1 class=><%= @album.name %></h1>

<% if @album.tracks.length > 0 %>
  <ul class=>
    <% @album.tracks.each do |track| %>
      <li><a href="<%= track_url(track) %>"><p><%= track.name %></p></a></li>
    <% end %>
  </ul>
<% else %>
  <p>A trackless album? Old school.</p>
<% end %>

<h4 class=>Links</h4>
<ul class=>
  <li><a class='button' href="<%= new_album_track_url(@album) %>">Add a track</a></li>
  <li><a class='button' href="<%= edit_album_url(@album) %>">Edit this album</a></li>
  <li>
    <form action="<%= album_url(@album) %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >
      <input type="submit" value="Destroy Album">
    </form>
  </li>
  <li><a class='button' href="<%= band_url(@album.band) %>">Back to <%= @album.band.name %></a></li>
</ul>
