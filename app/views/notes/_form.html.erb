<h4>New Note</h4>

<form class='form' action="<%= notes_url %>" method="POST">

  <input type="hidden" name="note[track_id]" value="<%= track.id %>">

  <p>
    <label for="note_content">Content</label>
    <textarea id="note_content" rows="7" cols="30" name="note[content]"></textarea>
  </p>

  <input type="submit">
</form>
